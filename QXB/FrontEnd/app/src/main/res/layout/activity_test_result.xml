<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="1dp"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/icon_primary">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="测试结果"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ==================== 普通测试结果区域 ==================== -->
            <LinearLayout
                android:id="@+id/normalResultContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- 结果图标 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/ivResultIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_result_normal"
                        app:tint="@color/icon_primary"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvResultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="心理状态良好"
                        android:textSize="24sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 分数卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的得分"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35"
                            android:textSize="48sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvPaperTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDS抑郁自评量表"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 结果描述卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结果分析"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvResultDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="您的测试结果显示心理状态良好，没有明显的抑郁症状。"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 建议卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专业建议"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvSuggestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="继续保持良好的生活习惯，适当运动，与亲友保持联系。"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- ==================== MBTI 测试结果区域 ==================== -->
            <LinearLayout
                android:id="@+id/mbtiResultContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- MBTI 报告头部卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMbtiHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3E5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你的专属MBTI测试报告已生成"
                            android:textSize="16sp"
                            android:textColor="#6A1B9A"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/tvMbtiTestTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生成于：2024-01-01 12:00:00"
                            android:textSize="12sp"
                            android:textColor="#9C27B0"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp" />

                        <!-- 类型展示区域 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20dp">

                            <!-- MBTI类型图片 -->
                            <ImageView
                                android:id="@+id/ivMbtiTypeImage"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_psychology" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="你的测试类型"
                                    android:textSize="14sp"
                                    android:textColor="#666666" />

                                <TextView
                                    android:id="@+id/tvMbtiTypeCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ENTP"
                                    android:textSize="42sp"
                                    android:textColor="#1A1A1A"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/tvMbtiTypeName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="辩论家"
                                    android:textSize="18sp"
                                    android:textColor="#7C4DFF"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 四维百分比卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型数据"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- E/I 维度 -->
                        <include
                            android:id="@+id/dimensionEI"
                            layout="@layout/item_mbti_dimension"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <!-- S/N 维度 -->
                        <include
                            android:id="@+id/dimensionSN"
                            layout="@layout/item_mbti_dimension"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <!-- T/F 维度 -->
                        <include
                            android:id="@+id/dimensionTF"
                            layout="@layout/item_mbti_dimension"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <!-- J/P 维度 -->
                        <include
                            android:id="@+id/dimensionJP"
                            layout="@layout/item_mbti_dimension"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 类型特征描述卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvMbtiTypeNameEn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The type that is best at innovation and debate"
                            android:textSize="12sp"
                            android:textColor="#7C4DFF"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvMbtiBriefDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最擅长创新和辩论的类型"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/bg_text_highlight" />

                        <TextView
                            android:id="@+id/tvMbtiDetailDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="你是充满灵感的创新者，有动力去寻找新的解决方案来解决具有智力挑战的问题。"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.6" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 优势特点卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStrengths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优势特点"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_result_normal"
                            android:drawablePadding="8dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvStrengths"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• 思维敏捷灵活\n• 创新能力强\n• 善于辩论说服"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 潜在弱点卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWeaknesses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="潜在弱点"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_result_mild"
                            android:drawablePadding="8dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvWeaknesses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• 可能过于争论\n• 容易感到无聊\n• 执行力待提高"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 职业建议卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCareer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="职业建议"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvCareerSuggestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="律师、创业者、产品经理、营销策划、发明家"
                            android:textSize="14sp"
                            android:textColor="#7C4DFF"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 著名人物卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFamousPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/border"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="同类型名人"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvFamousPeople"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="本杰明·富兰克林、托马斯·爱迪生、马克·吐温"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingMultiplier="1.5" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- 提示信息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 本测试结果仅供参考，不能作为医学诊断依据。如有需要，请咨询专业心理医生。"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="?attr/colorSurface"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            android:text="返回首页"
            android:textSize="16sp"
            style="@style/Widget.QXB.Button" />

    </LinearLayout>

</LinearLayout>
