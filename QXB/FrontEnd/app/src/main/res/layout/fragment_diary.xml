<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- 顶部标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="1dp"
        app:titleCentered="true"
        app:title="心情日记"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请选择心情（最多可选2个）"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- 心情选择 ChipGroup -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupMoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:selectionRequired="false"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHappy"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开心" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSweet"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="甜蜜" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipExcited"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冲鸭" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCalm"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="悠闲" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNormal"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平淡" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTired"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="疲惫" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAnxious"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="焦虑" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDepressed"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="压抑" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSad"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="难过" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAngry"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生气" />

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="原因（最多可选3个）"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- 原因选择 ChipGroup -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupReasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:selectionRequired="false"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLove"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="恋爱" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipStudy"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学业" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWork"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMoney"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="财富" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFamily"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="家人" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFriends"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="朋友" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColleagues"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="同事" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHealth"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTravel"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出行" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOther"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他" />

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="写点什么..."
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDiaryContent"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="12dp"
                        android:gravity="top"
                        android:maxLines="5"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:hint="记录今天的感受..." />

                    <TextView
                        android:id="@+id/tvCharCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/45"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:gravity="end"
                        android:layout_marginTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveDiary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="完成"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.QXB.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
