<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- 左侧维度标签和百分比 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLeftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外向"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tvLeftCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（E）"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tvLeftPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="71%"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 中间进度条 -->
    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="12dp"
        android:layout_marginHorizontal="8dp">

        <!-- 背景条 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dimension_bar" />

        <!-- 左侧进度 -->
        <View
            android:id="@+id/viewLeftProgress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/bg_dimension_progress_left" />

        <!-- 右侧进度 -->
        <View
            android:id="@+id/viewRightProgress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/bg_dimension_progress_right" />

    </FrameLayout>

    <!-- 右侧维度标签和百分比 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/tvRightPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29%"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内向"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tvRightCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（I）"
            android:textSize="12sp"
            android:textColor="@color/text_hint" />

    </LinearLayout>

</LinearLayout>
