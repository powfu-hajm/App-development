<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QXB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 使用您的自定义颜色 -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryContainer">@color/primary_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryContainer">@color/accent_light_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/background_white</item>

        <!-- 修复 Material Components 样式 -->
        <item name="chipStyle">@style/Widget.Material3.Chip.Filter</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
    </style>

    <!-- 完整的应用主题 -->
    <style name="Theme.QXB" parent="Base.Theme.QXB">
        <!-- 应用级别的主题定制 -->
    </style>
</resources>